@page
@model WebApplication1.Models.User
<link rel="stylesheet" href="@Url.Content("~/css/style.css")">
<body>
<div class="account">
    <div class="sidebar">
        <a class="active" href="@Url.Action("trangcanhan", "Home")">Trang cá nhân</a>
        <a href="@Url.Action("NewPassWord", "Home")">Đổi mật khẩu</a>
        <a href="@Url.Action("Logout", "Home")">Đăng xuất</a>

    </div>
</div>
@using (Html.BeginForm("UpdateUserPassword", "Home", FormMethod.Post))
{
    <h2>Đổi mật khẩu</h2>
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
        @Html.TextBox("Email", "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PassWord, new { @class = "control-label" })
        @*@Html.PasswordFor(m => m.PassWord, new { @class = "form-control" })*@
       @* @Html.TextBox("PassWord", "", new { @class = "form-control" })*@
        @Html.Password("newPassword", null, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.PassWord, "", new { @class = "text-danger" })
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Gửi</button>
}
</body>
