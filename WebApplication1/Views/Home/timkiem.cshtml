@model List<Section>
@using WebApplication1.Views.Home
@{
    ViewBag.Title = "timkiem";
}

<h1>Kết quả tìm kiếm cho "@ViewBag.data"</h1>

@if (Model != null && Model.Count > 0)
{
    <table>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Content</th>
            <th>Avg</th>
            <th>ArticleID</th>
        </tr>
        @foreach (var Section in Model)
        {
            <tr>
                <td>@Section.ID</td>
                <td>@Section.Title</td>
                <td>@Section.Content</td>
                <td>@Section.ArticleID</td>
            </tr>
        }
    </table>
}
else
{
    <p>Không có kết quả tìm kiếm.</p>
}

